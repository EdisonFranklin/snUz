    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Welcome Activity -->
        <activity
            android:name="us.ventr.snuz.Welcome"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Account Settings Activity -->
        <activity
            android:name="us.ventr.snuz.Account_settings2"
            android:label="@string/title_activity_account_settings2"
            android:parentActivityName="us.ventr.snuz.Welcome" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="us.ventr.snuz.Welcome" />
        </activity>
        <!-- Funding Settings activity -->
        <activity
            android:name="us.ventr.snuz.Info"
            android:label="@string/title_activity_info"
            android:parentActivityName="us.ventr.snuz.Welcome" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="us.ventr.snuz.Welcome" />
        </activity>
        <activity
            android:name="us.ventr.snuz.Alarm_settings"
            android:label="@string/title_activity_alarm_settings"
            android:parentActivityName="us.ventr.snuz.Welcome" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="us.ventr.snuz.Welcome" />
        </activity>
    </application>

</manifest>
